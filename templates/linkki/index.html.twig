{% extends 'base.html.twig' %}

{% block title %}LinkkiLista{% endblock %}

  {% block body %}
<div class="container mt-5">
<div class="jumbotron">
  <table class="table table-hover">
  <h1 class="badge badge-secondary p-3 mb-4">Linkki App</h1>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Linkki</th>
      <th scope="col">Otsikko</th>
      <th scope="col">Avainsana</th>
      <th scope="col">Kuvaus</th>
      <th scope="col">Toiminnot</th>
      
    </tr>
  </thead>
  <tbody>
  {% for linkki in linkit %}
    <tr>
      <th>{{ linkki.id}}</th>
      <td> <a href="{{linkki.linkki}}">{{ linkki.linkki}}</a></td>
      <td>{{ linkki.otsikko}}</td>
      <td>{{ linkki.avainsana}}</td>
      <td>{{ linkki.kuvaus}}</td>
      <td>
         <a href="{{ path('linkki_nayta',{id: linkki.id}) }}" class="btn btn-dark">Näytä</a>
         <a href="{{ path('linkki_muokkaa',{id: linkki.id}) }}" class="btn btn-success">Muokka</a>
         <button poista-linkki= "{{ linkki.id }}" class="btn btn-danger poista-linkki">Poista</button>
      </td>
    </tr>
    {% endfor %}
  </tbody>
    </table>

</div>
</div>

{% endblock %}




{% block javascripts %}
  {{ parent() }}
  <script src="js/index.js"></script>
{% endblock %} 